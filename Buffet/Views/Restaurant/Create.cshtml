@model Buffet.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="container pt-4 mt-4 ms-3">
    <h4 class=" ">Restaurant </h4>
    <hr />
    <div class="row ">
        <div class="col-md-4 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="ResId" class="control-label"></label>
                    <input asp-for="ResId" class="form-control" value="0"/>
                    <span asp-validation-for="ResId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResName" class="control-label">ชื่อร้าน</label>
                    <input asp-for="ResName" class="form-control" />
                    <span asp-validation-for="ResName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResPhone" class="control-label">เบอร์โทร</label>
                    <input asp-for="ResPhone" class="form-control" />
                    <span asp-validation-for="ResPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResLocation" class="control-label">ที่อยู่ร้าน</label>
                    <input asp-for="ResLocation" class="form-control" />
                    <span asp-validation-for="ResLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResAvg" class="control-label">ราคาเฉลี่ย</label>
                    <input asp-for="ResAvg" class="form-control" />
                    <span asp-validation-for="ResAvg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>
                    <select asp-for="TypeId" class="form-select" asp-items="ViewBag.Type"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <!--ธีม        รอ-->
                <div class="form-group">
                    <label asp-for="ThemeId" class="control-label"></label>
                    <input asp-for="ThemeId" class="form-control" />
                    <span asp-validation-for="ThemeId" class="text-danger"></span>
                </div>
                

                <!--รูปภาพของร้าน                 รอดูเวลาที่เหลืออยู่-->
                <div class="form-group " hidden>
                    <label asp-for="ResImg" class="control-label"></label>
                    <input asp-for="ResImg" class="form-control" value="0"/>
                    <span asp-validation-for="ResImg" class="text-danger"></span>
                </div>
                

                <div class="form-group">
                    <label asp-for="ResDtl" class="control-label">รายละเอียด</label>
                    <input asp-for="ResDtl" class="form-control" />
                    <span asp-validation-for="ResDtl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label"></label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Course"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <!--ไม่เข้าใจ 1-->
                <div class="form-group">
                    <label asp-for="TTotalId" class="control-label"></label>
                    <input asp-for="TTotalId" class="form-control" />
                    <span asp-validation-for="TTotalId" class="text-danger"></span>
                </div>

                <!--ไม่เข้าใจ 2-->
                <div class="form-group">
                    <label asp-for="TableId" class="control-label"></label>
                    <input asp-for="TableId" class="form-control" />
                    <span asp-validation-for="TableId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
