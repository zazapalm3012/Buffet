@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    var CusId = HttpContextAccessor.HttpContext.Session.GetString("CusId");
    var CusName = HttpContextAccessor.HttpContext.Session.GetString("CusName");
    var CartId = HttpContextAccessor.HttpContext.Session.GetString("CartId");
    var CartMoney = HttpContextAccessor.HttpContext.Session.GetString("CartMoney");
    var CartQty = HttpContextAccessor.HttpContext.Session.GetString("CartQty");
    var StfId = HttpContextAccessor.HttpContext.Session.GetString("StfId");
    
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Buffet</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Buffet.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
     
        <nav class="fixed-top navbar navbar-dark navbar-expand-sm navbar-toggleable-sm text-white " style="background-color: #FB054F;">
            <div class="container">
                @if (StfId != null)
                {
                    <a class="navbar-brand " asp-area="" asp-controller="Staff" asp-action="Index">
                        <img src="/Icon/icon.png" alt="" width="50" height="50">
                    </a>
                }
                else
                {
                    <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/Icon/icon.png" alt="" width="50" height="50">
                    </a>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1">
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    @if (StfId == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Restaurant" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                รายงาน
                            </a>
                            <ul class="dropdown-menu bg-light">
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="SaleDaily">
                                        สินค้าขายรายวัน
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="SaleMonthly">
                                        สินค้าขายรายเดือน
                                    </a>
                                </li>
                                

                            </ul>
                        </li>
                    }
                        
                    </ul>

                </div>
            

                    <ul class="navbar-nav ">
                        @if (CusId != null)
                        {
                    <li class="nav-item">
                        <button type="button" class="btn btn-light me-2">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Show" asp-route-id="@CusId">
                                @CusName
                            </a>
                        </button>
                    </li>
                            <li class="nav-item">
                                <button type="button" class="btn btn-light me-2">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                                </button>   
                            </li>
                        }
                        else
                        {
                            if( StfId == null)
                            {
                                <li class="nav-item">
                                    <button type="button" class="btn btn-light me-2">
                                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Login</a>
                                    </button>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <button type="button" class="btn btn-primary me-2">
                                <a class="nav-link text-white" asp-controller="Staff" asp-action="Logout">Logout</a>
                                    </button>
                                </li>
                            }
                            
                        }
                        
                       

                        

                    </ul>
                </div>
            </div>
        </nav>

	</header>
	<div class=" ">
		<main role="main" class="pb-3">
	<div class="">
		<main role="main">

					@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container-fluid text-black" style="background:pink">
			&copy; 2567 - Buffet - <a asp-area="" asp-controller="Home" asp-action="Privacy">ข้อกำหนดและเงื่อนไข</a>
		</div>

	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
			@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
