@model Buffet.Models.Customer

@{
	ViewData["Title"] = "SignUp";
}
<head>
	<meta charset="utf-8"></meta>
</head>
<body>
	<form asp-action="SignUp">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<section class="vh-100" style="">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-xl-9">
					<h1>Sign Up</h1>
					<h1 class="text-white mb-4">Apply for a job</h1>

					<div class="card" style="border-radius: 15px;">
						<div class="card-body">
							<div class="row align-items-center py-3">
								<div class="col-md-3 ps-5">
									<h6 class="mb-0">Email address</h6>

								</div>
								<div class="col-md-9 pe-5">
									<label asp-for="CusEmail" class="control-label"></label>
									<input asp-for="CusEmail" class="form-control form-control-lg" placeholder="eee@example.com" />
									<span asp-validation-for="CusEmail" class="text-danger"></span>
								</div>
							</div>

							<hr class="mx-n3">

							<div class="row align-items-center py-3">
								<div class="col-md-3 ps-5">
									<h6 class="mb-0">Name</h6>

								</div>
								<div class="col-md-9 pe-5">
									<label asp-for="CusName" class="control-label"></label>
									<input asp-for="CusName" class="form-control form-control-lg" placeholder="john wick" />
									<span asp-validation-for="CusName" class="text-danger"></span>
								</div>
							</div>

							<hr class="mx-n3">
							<div class="row align-items-center py-3">
								<div class="col-md-3 ps-5">
									<h6 class="mb-0">Phone number</h6>

								</div>
								<div class="col-md-9 pe-5">
									<label asp-for="CusPhone" class="control-label"></label>
									<input asp-for="CusPhone" class="form-control form-control-lg" placeholder="0910766589" />
									<span asp-validation-for="CusPhone" class="text-danger"></span>
								</div>
							</div>

							<hr class="mx-n3">
							<div class="row align-items-center py-3">
								<div class="col-md-3 ps-5">
									<h6 class="mb-0">password</h6>

								</div>
								<div class="col-md-9 pe-5">
									<label asp-for="CusPass" class="control-label"></label>
									<input asp-for="CusPass" class="form-control form-control-lg" />
									<span asp-validation-for="CusPass" class="text-danger"></span>
								</div>
							</div>
							<hr class="mx-n3">

							<div class="px-5 py-4">
								<button type="submit" value="SignUp" class="btn btn-primary btn-lg">Sign up</button>
							</div>

						</div>
					</div>

				</div>
			</div>
		</div>
		</section>
	</form>

</body>